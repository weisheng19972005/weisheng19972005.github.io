    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/3.1.2/fullpage.min.js"></script>
    <script>
        new fullpage('#fullpage', {
            navigation: true,
            scrollingSpeed: 800,
            onLeave: function(origin, destination, direction){
                // 文字动画触发
                $('.animate-text span').css('animation', 'none');
                setTimeout(() => {
                    animateText();
                }, 500);
            }
        });

        function animateText() {
            $('.animate-text').each(function(){
                let $this = $(this);
                $this.html($this.text().replace(/\S/g, "<span>$&</span>"));
                $this.find('span').each((i, el) => {
                    setTimeout(() => {
                        $(el).css('animation', 'fadeUp 0.5s forwards');
                    }, i * 10);
                });
            });
        }

         // 修改后的loadDepartment函数
         function loadDepartment(dept) {
            const content = {
                宣传: `
                    <h2 class="fade-in-line" style="animation-delay: 0.3s">宣传部2024年度工作成果</h2>
                    <p class="fade-in-line" style="animation-delay: 0.6s">推送<span class='highlight-number'>69</span>篇</p>
                    <p class="fade-in-line" style="animation-delay: 0.9s">文字累计<span class='highlight-number'>54517</span>字</p>
                    <p class="fade-in-line" style="animation-delay: 1.2s">阅读量<span class='highlight-number'>63343</span>次</p>
                    <p class="fade-in-line" style="animation-delay: 1.5s">累计返图<span class='highlight-number'>60.7</span>GB</p>
                `,
                文艺: `
                    <h2 class="fade-in-line" style="animation-delay: 0.3s">文艺部2024年度活动回顾</h2>
                    <p class="fade-in-line" style="animation-delay: 0.6s">举办文艺活动<span class='highlight-number'>8</span>次</p>
                    <p class="fade-in-line" style="animation-delay: 0.9s">湖畔音乐会、迎新晚会、艺术表演大赛……</p>
                    <p class="fade-in-line" style="animation-delay: 1.2s">观众参与累计数超<span class='highlight-number'>4000</span>次</p>
                    <p class="fade-in-line" style="animation-delay: 1.5s">2024-2025跨年晚会<br/>从策划到协调，从节目到场控……<br/>文艺部携手其他兄弟部门和组织，并肩作战<br/>让晚会完美落幕</p>
                `,
                体育: `
                    <h2 class="fade-in-line" style="animation-delay: 0.3s">体育部2024年度活动回顾</h2>
                    <p class="fade-in-line" style="animation-delay: 0.6s">举办体育活动<span class='highlight-number'>5</span>次<br/>学代会预热活动、校园吉尼斯大赛……</p>
                    <p class="fade-in-line" style="animation-delay: 0.9s">举办荧光夜跑<span class='highlight-number'>15</span>期</p>
                    <p class="fade-in-line" style="animation-delay: 1.2s">累计减打卡<span class='highlight-number'>4536</span>次</p>
                `,
                外联: `
                    <h2 class="fade-in-line" style="animation-delay: 0.3s">外联部2024工作成果</h2>
                    <p class="fade-in-line" style="animation-delay: 0.6s">采购物资<span class='highlight-number'>9</span>次</p>
                    <p class="fade-in-line" style="animation-delay: 0.9s">主办了<span class='highlight-number'>国庆观影活动</span></p>
                    <p class="fade-in-line" style="animation-delay: 1.2s">所有的活动运转都离不开<span class='highlight-number'>外联部</span></p>
                    <p class="fade-in-line" style="animation-delay: 1.5s">协调场地、设施、物资、人员、海报……<br/>每一项活动都有外联部的身影</p>
                `
            };
            
            // 先清空内容并立即跳转页面
            $('#department-content').empty();
            fullpage_api.moveTo('page3');
            
            // 延迟加载内容以确保动画生效
            setTimeout(() => {
                $('#department-content').html(content[dept]);
                // 重置动画
                $('.fade-in-line').each(function() {
                    $(this).css('animation', 'none');
                    requestAnimationFrame(() => {
                        $(this).css('animation', '');
                    });
                });
            }, 500);
        }

        // 移除原来的animateLines函数

        $(document).ready(() => {
            animateText();
            setTimeout(() => fullpage_api.moveTo(1, 0), 1000);
        });
    </script>
